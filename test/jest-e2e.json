{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"],
  "testTimeout": 30000,
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "collectCoverageFrom": [
    "../src/**/*.ts",
    "!../src/**/*.spec.ts",
    "!../src/**/*.e2e-spec.ts"
  ],
  "coverageDirectory": "../coverage"
}
